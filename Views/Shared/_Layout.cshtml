<!DOCTYPE html>
<html lang="pt_br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fornecedores</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fornecedores.styles.css" asp-append-version="true" />
    <style>
        /* Definindo as cores da nova paleta */
        :root {
            --light-blue: #8DB9F2;
            --dark-blue: #035AA6;
            --yellow: #F2D43D;
            --red: #F21D1D;
            --light-gray: #F2F2F2;
        }

        body {
            background-color: var(--light-gray); /* Fundo claro */
            color: var(--dark-blue); /* Texto principal */
        }

        .navbar {
            background-color: var(--dark-blue); /* Cabeçalho */
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: white; /* Texto do cabeçalho */
            }

                .navbar .nav-link:hover {
                    color: var(--light-blue); /* Hover no texto da navegação */
                }

        .footer {
            background-color: var(--dark-blue); /* Rodapé */
            color: white;
        }

            .footer a {
                color: var(--yellow); /* Links no rodapé */
            }

                .footer a:hover {
                    color: var(--red); /* Hover no rodapé */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom justify-content-between text-center mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Fornecedor" asp-action="Index">Fornecedores</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Fornecedor" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Fornecedor" asp-action="Privacy">Direitos Reservados</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center py-3">
        <div class="container">
            &copy; 2024 - Fornecedores - <a asp-area="" asp-controller="Fornecedor" asp-action="Privacy">Direitos Reservados</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

